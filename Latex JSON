"latex-workshop.latex.tools": [
  {
    "name": "pdflatex-temp",
    "command": "pdflatex",
    "args": [
      "-synctex=1",
      "-interaction=nonstopmode",
      "-output-directory=build",  // Temporary files in `build/`
      "main.tex"
    ]
  },
  {
    "name": "bibtex-temp",
    "command": "bibtex",
    "args": [
      "build/main" // BibTeX works with temporary files in `build/`
    ]
  }
]

{
  "name": "move-pdf",
  "command": "sh",
  "args": [
    "-c",
    "mv build/main.pdf output/"
  ]
}