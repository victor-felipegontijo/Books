    "name": "pdflatex -> bibtex -> pdflatex*2 (with folders)",
    "tools": [
      "pdflatex-temp",
      "bibtex-temp",
      "pdflatex-temp",
      "pdflatex-temp",
      "move-pdf"
    ]
  }
